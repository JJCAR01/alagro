---
import Layout from '../../../layouts/base.astro';
import Header from '../../../components/header/header.astro';
import Footer from '../../../components/footer/footer.astro';
import IdProductoAlmacen from '@components/productos/almacen/idProductoAlmacen.astro';
import { listaProductosAlmacen } from '../../../data/productosAlmacen';

export function getStaticPaths() {
  return listaProductosAlmacen.map((producto) => ({
    params: { id: producto.id.toString() },
    props: { producto }
  }));
}

const { producto } = Astro.props;
---

<Layout>
  <Header />
  <IdProductoAlmacen producto={producto} />
  <Footer />
</Layout>
