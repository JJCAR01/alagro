---
import Layout from '../layouts/base.astro';
import Header from '../components/header/header.astro';
import Footer from '../components/footer/footer.astro';
---

<Layout>
	<Header />
        <main class="container">
            <h1 class="pqrsf-title">Formulario de PQRSF</h1>

            <iframe
                src="https://docs.google.com/forms/d/e/1FAIpQLSf97khzbzjMEfFRobZrzmOPgNFMzP_gvtrp7rGBLzrgkDVPqQ/viewform?embedded=true"
                width="100%"
                height="3200"
                style="border:0; overflow:hidden;"
                >
                Cargandoâ€¦
            </iframe>

        </main>
	
	
	<Footer />
</Layout>

<style>
    body {
        background: linear-gradient(
        180deg,
        #f8f5ef 0%,
        #ffffff 60%
        );
    }

    .container {
        backdrop-filter: blur(4px);
        max-width: 1100px;
        margin: 3rem auto;
        padding: 3rem 2rem;
        background: var(--color-primary);
        border-radius: 20px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.08);
    }

    .pqrsf-title {
        text-align: center;
        font-size: clamp(2rem, 4vw, 3rem);
        font-weight: 700;
        letter-spacing: 0.5px;
        margin-bottom: 2.5rem;
        color: var(--color-white);
    }

    iframe {
        border-radius: 16px;
        background: #fff;
    }
</style>

