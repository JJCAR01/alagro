---
import '../idProducto.css';
import { listaProductosLaLola } from '../../../data/productosLaLola';

export function getStaticPaths() {
  return listaProductosLaLola.map((producto) => ({
    params: { id: producto.id.toString() },
    props: { producto }
  }));
}
const { producto } = Astro.props;
---


<main class="container producto-detalle">
    <a href="/productos/la-lola" class="btn-volver">← Volver a productos</a>

    <div class="detalle-wrapper">
      <div class="detalle-imagen">
        <img src={producto.img} alt={producto.name} class="producto-img-grande" />
      </div>

      <div class="detalle-info">
        <h1 class="detalle-titulo">{producto.name}</h1>
        
        <p class="detalle-descripcion">{producto.longDesc}</p>


        <div class="detalle-meta">
          <p><strong>Marca:</strong> La Lola</p>
          <p><strong>Descripción:</strong> {producto.desc}</p>
          <p><strong>Ventajas:</strong></p>
          <ul class="lista-ventajas">
            {producto.ventajas && producto.ventajas.map(v => <li><p>{v}</p></li>)}
          </ul>
        </div>
      </div>
    </div>

    <section class="productos-relacionados">
      <h2>Otros productos de La Lola</h2>
      <div class="grid-relacionados">
        {listaProductosLaLola.map(prod => (
          <a href={`/productos/la-lola/${prod.id}`} class={`card-relacionado ${prod.id === producto.id ? 'activo' : ''}`}>
            <img src={prod.img} alt={prod.name} />
            <p>{prod.name}</p>
          </a>
        ))}
      </div>
    </section>
</main>